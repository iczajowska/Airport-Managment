<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<StackPane prefWidth="450.0" prefHeight="150.0" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.AccountLoginController">
    <children>
        <StackPane>
            <children>
                <VBox spacing="20.0">
                    <children>
                        <GridPane>
                            <children>
                                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="loginText" />
                                <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="loginText"/>
                                <TextField fx:id="user"  GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                <PasswordField fx:id="password"  GridPane.columnIndex="1" GridPane.rowIndex="1" />
                            </children>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="148.0" minWidth="10.0" prefWidth="109.0" />
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="228.0" minWidth="10.0" prefWidth="189.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                        </GridPane>
                        <HBox alignment="BOTTOM_CENTER" spacing="5.0" BorderPane.alignment="CENTER">
                            <children>
                                <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogInAction" prefWidth="80.0" text="Log In">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                    </HBox.margin></Button>
                                <Button fx:id="signUpButton" mnemonicParsing="false" onAction="#handleSignUpAction" prefWidth="80.0" text="Sign Up">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                    </HBox.margin></Button>
                            </children>
                            <BorderPane.margin>
                                <Insets bottom="0.0" left="5.0" right="5.0" top="5.0" />
                            </BorderPane.margin>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
</StackPane>
